<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    android:scrollbarSize="8dp"
    android:padding="8sp"
    tools:context=".MobileRiceMillActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relative1"
        android:layout_marginTop="15dp"
        android:gravity="center">

        <TextView
            android:id="@+id/ct"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/titilliumsemibold"
            android:text="Mobile Mini Rice Mill Plant"
            android:textColor="@color/teal_700"
            android:layout_marginLeft="30dp"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="245dp"
            android:layout_height="212dp"
            android:layout_below="@+id/ct"
            android:layout_marginTop="36dp"
            android:id="@+id/ctimage"
            android:layout_marginLeft="55dp"
            android:src="@drawable/capacitypaddy" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/gl"
            android:layout_below="@+id/ctimage">
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp"
                android:rowCount="6"
                android:layout_marginLeft="15dp"
                android:columnCount="2"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Usage/Application  "
                    android:fontFamily="@font/titilliumsemibold"
                    android:textColor="@color/teal_700"
                    android:textSize="18dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : Agriculture"
                    android:fontFamily="@font/titilliumsemibold"
                    android:textColor="@color/black"
                    android:textSize="18dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Capacity per hour paddy"
                    android:fontFamily="@font/titilliumsemibold"
                    android:textColor="@color/teal_700"
                    android:textSize="18dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : 1200-1800 KILOS"
                    android:fontFamily="@font/titilliumsemibold"
                    android:textColor="@color/black"
                    android:textSize="18dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Driving Pulley "
                    android:fontFamily="@font/titilliumsemibold"
                    android:textColor="@color/teal_700"
                    android:textSize="18dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : 12 x 6"
                    android:fontFamily="@font/titilliumsemibold"
                    android:textColor="@color/black"
                    android:textSize="18dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Speed R.P.M."
                    android:fontFamily="@font/titilliumsemibold"
                    android:textColor="@color/teal_700"
                    android:textSize="18dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : 940-1200"
                    android:fontFamily="@font/titilliumsemibold"
                    android:textColor="@color/black"
                    android:textSize="18dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Power Required"
                    android:fontFamily="@font/titilliumsemibold"
                    android:textColor="@color/teal_700"
                    android:textSize="18dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : 20 H.P.(960rpm)"
                    android:fontFamily="@font/titilliumsemibold"
                    android:textColor="@color/black"
                    android:textSize="18dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="COST"
                    android:fontFamily="@font/titilliumsemibold"
                    android:textColor="@color/teal_700"
                    android:textSize="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" : 1.9 Lakh"
                    android:fontFamily="@font/titilliumsemibold"
                    android:textColor="@color/black"
                    android:textSize="20dp"/>
            </GridLayout>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/gl"
            android:text="Buy"
            android:id="@+id/addtocart1"
            android:layout_margin="30dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="20dp"
            android:background="@drawable/circlebutton"
            android:fontFamily="@font/albam"/>
    </RelativeLayout>
</ScrollView>