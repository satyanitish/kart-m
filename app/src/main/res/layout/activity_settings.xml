<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".SettingsActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:id="@+id/profilepicture"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:background="@color/white"
                android:src="@drawable/pp1" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:textSize="30sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/titilliumbold"
                />
            <Button
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_margin="40dp"
                android:id="@+id/editprofile"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:background="@drawable/custombutton"
                android:fontFamily="@font/albam"
                android:maxLines="1"
                android:text="Edit" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="20sp"
                android:background="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name"
                android:id="@+id/pname"
                android:textSize="15sp"
                android:layout_marginTop="15sp"
                android:textColor="@color/black"
                android:layout_margin="20sp"
                android:fontFamily="@font/titilliumsemibold"/>
            <TextView
                android:id="@+id/pgmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/titilliumsemibold"
                android:text="Gmail"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <TextView
                android:id="@+id/pmobilenumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20sp"
                android:layout_marginTop="5dp"
                android:fontFamily="@font/titilliumsemibold"
                android:text="Mobile Number"
                android:textColor="@color/black"
                android:textSize="15sp" />
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                android:layout_margin="20sp"/>
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="40dp"
                android:layout_marginTop="50dp"
                android:fontFamily="@font/albam"
                android:maxLines="1"
                android:background="@drawable/custombutton"
                android:onClick="backMenu1"
                android:text="Back to Menu" />
        </LinearLayout>
</ScrollView>